{
    "extends": "airbnb",
    "env": {
        "node": true,
        "mongo": true,
        "es6": true,
        "browser": true
    },
    "plugins": [
        "jsx-a11y",
        "import",
        "react"
    ],
    "parser": "babel-eslint",
    "rules": {
        "object-curly-newline": 0,
        "react/jsx-filename-extension": 0,
        "no-plusplus": 0,
        "jsx-a11y/label-has-for": [2, {
            "components": ["Label"],
            "required": {
                "some": ["nesting", "id"]
            },
            "allowChildren": false
        }],
        "jsx-a11y/label-has-associated-control": [2, {
            "labelComponents": ["CustomLabel"],
            "labelAttributes": ["inputLabel"],
            "controlComponents": ["CustomInput"],
            "depth": 3
        }]
    }
}